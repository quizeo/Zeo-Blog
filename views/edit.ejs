<%- include('partials/header') %>

<div class="form_container">
  <div class="wrapper2">
    <% locals.matchingBlogs2 %>
    <% matchingBlogs2.forEach(blog => { %>
    <h2><%= blog.title %></h2>
    <form action="/edit/submit/<%= blog.title %>" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="form_group1">
        <div class="form-group">
          <label for="content">Description</label>
          <input type="text" class="form-control" id="content" name="content" value="<%= blog.content %>" required>
        </div>
      </div>
      <div class="form-group">
        <label for="wholeContent">Content</label>
        <textarea class="form-control" id="wholeContent" name="wholeContent" rows="5" required><%= blog.wholeContent %></textarea>
      </div>
      <div class="form-group">
        <label for="wholeContent2">Content 2</label>
        <textarea class="form-control" id="wholeContent2" name="wholeContent2" rows="5" required><%= blog.wholeContent2 %></textarea>
      </div>
      <div class="form_group2">
        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" class="form-control" id="author" name="author" value="<%= blog.author %>" required>
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" class="form-control" id="date" name="date" value="<%= blog.date %>" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <% }); %>
  </div>
</div>

<!-- partial -->
<script src="https://unpkg.com/gsap@3/dist/gsap.min.js"></script>
<script src="https://unpkg.com/gsap@3/dist/ScrollTrigger.min.js"></script>
<script src="/js/script.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<!-- Added WOW.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script>
new WOW().init();
</script>
</body>
</html>